---
const { page } = Astro.props;
---

<nav class="flex justify-center items-center gap-4 py-4">
    {
        page.url.prev && (
            <a
                href={page.url.prev}
                class="px-4 text-sm font-medium text-seafoam hover:opacity-75 transition-opacity"
            >
                Previous
            </a>
        )
    }
    {
        page.url.next && (
            <a
                href={page.url.next}
                class="px-4 text-sm font-medium text-seafoam hover:opacity-75 transition-opacity"
            >
                Next
            </a>
        )
    }
</nav>
